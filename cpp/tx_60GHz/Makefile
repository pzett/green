#==============================================================
CXXFLAGS = -o3 -Wall -DNDEBUG
LDLIBS = -luhd -lboost_program_options

#==============================================================
 
all:	tx_60GHz

#==============================================================
clean:
	rm -f *.o 
	rm -f tx_60GHz
#==============================================================
tx_60GHz: tx_60GHz.o board_60GHz.o board_60GHz.hpp 
	$(CXX) -o $@ $^ $(LDLIBS) 
#==============================================================
rx_60GHz: rx_60GHz_1.o board_60GHz.o board_60GHz.hpp
	$(CXX) -o $@ $^ $(LDLIBS) 