#==============================================================
CXXFLAGS = -o3 -Wall -DNDEBUG
LDLIBS = -luhd -lboost_program_options

#==============================================================
 
all:	rx rx_60GHz

#==============================================================
clean:
	rm -f *.o 
	rm -f rx rx_60GHz
#==============================================================
rx: rx.o 
	$(CXX) -o $@ $^ $(LDLIBS) 
#==============================================================
rx_60GHz: rx_60GHz.o board_60GHz.o board_60GHz.hpp
	$(CXX) -o $@ $^ $(LDLIBS) 

