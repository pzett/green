#==============================================================
CXXFLAGS = -o3 -Wall -DNDEBUG `itpp-config --cflags`
LDLIBS = -luhd -lboost_program_options `itpp-config --libs`

#==============================================================

all:	tx rx 

#==============================================================
clean:
	rm -f *.o 
	rm -f tx rx 
#==============================================================
rx: rx.o green_fuct.o green_fuct.hpp
	$(CXX) -o $@ $^ $(LDLIBS) 
#==============================================================
tx: tx.o  green_fuct.o green_fuct.hpp

	$(CXX) -o $@ $^ $(LDLIBS) 
#==============================================================


